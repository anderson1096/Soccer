<section id="login-section" class="container">
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin", id: "form-login" }) do |f|%>
  <h2 class="form-signin-heading">Iniciar Sesión</h2>
    <div class="field">
      <%= f.label :email, class: "sr-only" %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "Correo", class: "form-control", id: "inputEmail"%>
    </div>
    
    <div class="field">
      <%= f.label :password, class: "sr-only" %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña", class:"form-control", id:"inputPassword" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Recuerdame", id:"label-remember" %>
      </div>
    <% end -%>
    <div class="actions text-center">
      <%= f.submit "Iniciar Sesión" , class: "btn btn-success btn-lg btn-block"%>
    </div>
  <% end %>
  <br>  
  <div class="text-center" id="links">
     <%= render "devise/shared/links" %>
  </div>
</section>
